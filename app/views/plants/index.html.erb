<div class="container">
<%= @user.username %>'s Plants:

  <div class="row">
    <div class="sidebar">
    </div>
    <% @plants.each do |plant| %>
      <div class="col-md-2 mb-4">
        <div class="card">
        <% if @album.album_cover_photo.attached? %>
          <%= image_tag @album.album_cover_photo %>
        <% else %>
          
        <% end %>
        <img class="card-img-top" src="<%= "#{Faker::LoremFlickr.image(search_terms: ["#{plant.name}"])}" %>", width="200px" heigth="auto" alt="">
        <div class="card-body" style="height: 100px">
              <h5 class="card-title"><%= link_to plant.name, plant_path(plant) %></h5>
              <p class="card-text"></p>
  
            </div>
        </div>
      </div>
    <% end %>
  </div>

  