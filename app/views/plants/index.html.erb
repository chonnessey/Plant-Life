<div class="container">
  <div class="row">
    <div class="col-2">
      "Welcome" <%= @user.username %>"!"
      <img id="profile_pic" src="<%="#{Faker::Placeholdit.image}"%>">
      <p>"How are your plant's doing?"</p>
    </div>
    <div class="col-6">
      <% @plants.limit(4).each do |plant| %>
        <div class="col-2">
          <div id="accordion">
            <div class="card">
              <div class="card-header id">
              </div>

          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>


  
    
      <div class="col-md-2 mb-4">
        <div class="card">
          <% if plant.photo.attached? %>
            <%= image_tag plant.photo %>
          <% else %>
            <img class="card-img-top" src="<%= "#{Faker::LoremFlickr.image(search_terms: ["#{plant.name}"])}" %>", width="200px" height="auto" alt="">
          <% end %>
          <div class="card-body" style="height: 100px">
            <h5 class="card-title"><%= link_to plant.name, plant_path(plant) %></h5>
            <p class="card-text"></p>
          </div>
        </div>
      </div>
    <% end %>
   
      
  </div>
  <h3><%= link_to 'Add Plant', 'plants/new' %></h3>
</div>