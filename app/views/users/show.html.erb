<div class="row">
  <div class="col-6">
    <h1><%= @user.username %></h1>
    <h2><%= @user.email %></h2>
  </div>
  <div class="col-6">
    <h2>Send Message</h2>
    <%= link_to "Send Message", "#{@user.id}/messages/new" %>
  </div>
  <h3>Plants:</h3>
<% @user.plants.each do |plant| %>
  <%= link_to plant.name, plant_path(plant) %>
<% end %>