<h2>
  <div class="col-9">
    <%= form_for [@plant] do |f| %>
      <div class="row" style="margin-left:15%;">
        <%= f.text_field :name, class: "form-control", placeholder: 'Name', required: true %>
      </div>
      <br>
      <br>
      <div class="row" style="margin-left:10%;">
        <div class="col-6">
          <h2 style="margin-left:20%;">Category</h2>
          <hr style="margin-left:20%;">
          <br>
          <%= f.select :category, ['Tree', 'Houseplant',  'Vegetable', 'Fruit', 'Herb']%> 
        </div>
        <div class="col-6">
          <div class="row" style="margin-down:2%;">
            <h2 style="margin-left:50%;">Health</h2>
          </div>
          <hr style="margin-left:50%;">
          <%= f.select :health, ['Dismal', 'Bad',  'Okay', 'Good', 'Excellent']%>
        </div>
      </div>
      <br>
      <br>
      <%= f.file_field :photo %>
      <div class="row" style="margin-left:25%;">
        <%= f.submit class:"btn btn-primary", id:"signup_button"%>
      </div>
    <% end %>
  </div>
</h2>

